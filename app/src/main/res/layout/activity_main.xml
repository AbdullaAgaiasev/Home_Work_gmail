<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:background="@drawable/ic_whatshot"
        android:layout_marginVertical="160sp"
        android:layout_marginHorizontal="10sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_editText"
        android:layout_width="359dp"
        android:layout_height="48dp"
        android:layout_margin="26dp"
        android:autoLink="email"
        android:background="@drawable/custom_button"
        android:hint="Введите вашу почту"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/et_editText_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/Edit_text"
        android:layout_width="359dp"
        android:layout_height="48dp"
        android:layout_margin="26dp"
        android:textColor="@color/black"
        android:background="@drawable/custom_button"
        android:hint="Введите сообщение"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/btn_next_activity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_editText_2"
        android:layout_width="359dp"
        android:layout_height="48dp"
        android:layout_margin="26dp"
        android:autoLink="email"
        android:background="@drawable/custom_button"
        android:hint="Введите заголовок вашего текста"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/Edit_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_next_activity"
        android:text="@string/transition"
        android:backgroundTint="@color/gray"
        android:layout_width="364dp"
        android:layout_height="54dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>